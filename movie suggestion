#include<stdio.h>
int main()
{
    float IMDB;
    printf("enter IMDB rating");
    scanf("%f",&IMDB);
    if (IMDB>=9.0)
    {
        printf("you must watch the movie");
    }
    else if (IMDB>=7.0)
    {
        printf("it is a good movie");
    }
    else if (IMDB>=5.0)
    {
        printf("it is an average movie");
    }
   

 else if (IMDB<5.0)
    {
        printf("skip this movie");
    }
    return 0;
}
