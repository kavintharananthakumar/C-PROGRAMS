#include <stdio.h>
int main()
{
    char ch,prev,next;
    printf("enter the character");
    scanf("%c",&ch);
    if ((ch>='A'&& ch<='Z')||(ch>='a'&& ch<='z'))
    {
       if (ch=='A')
       {
           prev='Z';
           next=ch+1;
       }
       else if (ch=='Z')
       {
          prev=ch-1;
          next='A';
       }
       else if (ch=='a')
       {
          prev='z';
          next=ch+1;
       }
       else if (ch=='z')
       {
           prev=ch-1;
           next='a';
       }
       else 
       {
            prev=ch-1;
            next=ch+1;
       }
       printf("the previous character%c",prev);
       printf("the next character%c",next);
    }
    else
    {
        printf("invalid input");
    }
       
   
    return 0;
}
